<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewRed1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#ff0400"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRed2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#ff0400"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRed3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:background="#ff0400"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRed4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#ff0400"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewRed5"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#ff0400"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textViewYellow1"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#ffd000"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textViewYellow2"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="16dp"
        android:background="#ffd000"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textViewYellow3"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:background="#ffd000"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp" />


    <TextView
        android:id="@+id/textViewYellow4"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:background="#ffd000"
        android:gravity="center"
        android:text="Hello"
        android:textColor="#FF190481"
        android:textSize="20sp"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
 />


</RelativeLayout>